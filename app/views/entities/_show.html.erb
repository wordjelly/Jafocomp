<div class="row">
	<div class="col s12 m12 l12">
	  <div class="card">
	    <div class="card-image">
	      <img class="entity_background" style="height: 200px">
	    </div>
	    <div class="card-content">
	      <span class="card-title blue-grey-text" style="font-weight: 300; font-size:44px; margin-bottom:1rem;"><%= @entity.page_title %></span>
	      <p style="font-size: 20px;"><%= @entity.page_description %></p>
	    </div>
	    <div class="card-action">
	      <!-- here the title and description will be different -->
	      <%= link_to "Positive Indicators", direction_entity_path(:id => @entity.stock_name.to_s, :trend_direction => "rise") %>
	      <%= link_to "Negative Indicators", direction_entity_path(:id => @entity.stock_name.to_s, :trend_direction => "rise") %>
	    </div>
	  </div>
	</div>
</div>

<!-- would be better to -->

<div class="row" style="margin-bottom: 10px !important; display: none;">
	<div class="col l12 s12 m12">
		<ul class="collection with-header">
			<li class="collection-header"><h4><i class="material-icons" data-icon="storage" style="margin-right:1rem;"></i>Latest Trends</h4></li>
		</ul>
	</div>
</div>


<h3 class="header light" style="padding-left: 1rem; margin-bottom: 1rem; margin-top:3rem;"><i class="material-icons" data-icon="collections_bookmark"></i><span style="margin-left: 0.5rem;">Top Trends</span></h3>
<div class="divider" style="width:30%; margin-left: 1rem; margin-bottom: 1rem;"></div>

<div class="row">
	<% puts "total top results are: #{@entity.stock_top_results.size}" %>
	<% @entity.stock_top_results.each do |result| %>
		<%= render :partial => "/entities/summary_card", locals: {result: result } %>	
	<% end %>
</div>

<%= render :partial => "/entities/paginate" %>


<%= render :partial => "/entities/correlations_with_indices" %>

<% if @entity.is_index? %>
	<%= render :partial => "/exchanges/components" %>
<% end %>

