<!-- order transfer -->
<div id="combinations" style="padding-bottom:2rem;">
	<% @entity.combinations.each do |combination| %>

		<div class="row stock_exchange" id="<%= combination['exchange_name'] %>" style="margin-bottom: 0px !important; margin-top: 1.5rem;">
			<div class="col l12 s12 m12">
				<ul class="collection with-header center" style="margin-bottom: 0px !important;">
					<li class="collection-header"><h4>Correlations with <%= combination["exchange_name"] %> Stocks</h4>
					</li>
				</ul>
			</div>
		</div>

		<div class="row" id="<%= combination['exchange_name'] %>_entities" style="display: none; margin-bottom: 0px !important;">
			<div class="col l12 s12 m12">
				<ul class="collection with-header">
					<li class="collection-header center" style="padding: 1rem !important;">
						<% combination["entities"].each do |entity| %>
							<div data-exchange-div-id="<%= combination['exchange_name'] %>" data-entity="<%= JSON.generate(entity) %>" style="margin-bottom: 0px !important; margin-top: 0.5rem; background-color: white; border: 1px solid; border-color: #90a4ae; cursor: pointer;" id="<%= entity['primary_entity_id'] %>" class="chip blue-grey-text entity">
								<%= entity["primary_entity_name"] %>
							</div>
						<% end %>
					</li>
				</ul>
			</div>
		</div>

		<div class="row" id="<%= combination['exchange_name'] %>_entity_combinations" style="display:none;">
			<% combination["entities"].each do |entity| %>
				<div style="display:none;" class="entity_combination" id="entity_combination_<%= entity['primary_entity_id'] %>">
					<div style="margin-bottom: 0px !important; margin-top: 0.5rem; background-color: white; border: 1px solid; border-color: #90a4ae; cursor: pointer;" class="col s10 m10 l10 offset-l1 offset-m1 offset-s1 center chip blue-grey-text">
						<a href="<%= @entity.stock_name %>/with_stock/<%= entity['primary_entity_name'] %>">More Correlations for <%= entity['primary_entity_name'] %> VS <%= @entity.stock_name %></a>
					</div>
				</div>
			<% end %>
		</div>

	<% end %>
</div>