<div class="row">
	<div class="col s12 m12 l12">
	  <div class="card">
	    <div class="card-image">
	      <img style="max-height: 400px" src="/assets/stocks/default.png">
	      
	    </div>
	    <div class="card-content">
	      <span class="card-title"><%= @stock.stock_name %></span>
	      <p>Explore thousands of financial indicators and correlations for <%= @stock.stock_name %></p>
	      <p><%= @stock.stock_description %></p>
	    </div>
	    <div class="card-action">
	      <a href="<%= @stock.stock_link %>">Read More At Wikipedia</a>
	    </div>
	  </div>
	</div>
</div>

<% @stock.stock_top_results.each_slice(2) do |results| %>
	<div class="row">
		<% results.each do |result| %>
		    <div class="col s12 m6 l6">
			    <div class="card">
			        <div class="card-image">
			          <img />
			          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
			        </div>
			        <div class="card-content">
			          
			          <span class="card-title"><%= result["_source"]["setup"] %></span>
			          <p><%= result["_source"]["answer"] %></p>
			        </div>
			    </div>
		    </div>
		<% end %>
	</div>
<% end %>