<div class="row">
	<div class="col s12 m12 l12">
	  <div class="card">
	    <div class="card-image">
	      <img class="entity_background" style="height: 200px">
	    </div>
	    <div class="card-content">
	      <span class="card-title blue-grey-text" style="font-weight: 500"><%= @stock.stock_name %></span>
	      <p>Explore thousands of financial indicators and correlations for <%= @stock.stock_name %></p>
	      <p><%= @stock.stock_description %></p>
	    </div>
	    <div class="card-action">
	      <a href="<%= @stock.stock_link %>">Read More At Wikipedia</a>
	    </div>
	  </div>
	</div>
</div>

<!-- would be better to -->

<div class="row" style="margin-bottom: 10px !important;">
	<div class="col l12 s12 m12">
		<ul class="collection with-header">
			<li class="collection-header"><h4><i class="material-icons" style="margin-right:1rem;">storage</i>Latest Correlations</h4></li>
		</ul>
	</div>
</div>

<% @stock.stock_top_results.each_slice(1) do |results| %>
	<div class="row">
		<% results.each do |result| %>
		    <%= render :partial => "/stocks/summary_card", locals: {result: result } %>
		<% end %>
	</div>
<% end %>
	

<!-- order transfer -->

<% @stock.combinations.each do |combination| %>

	<div class="row exchange" id="<%= combination['exchange_name'] %>" style="margin-bottom: 0px !important;">
		<div class="col l12 s12 m12">
			<ul class="collection with-header center" style="margin-bottom: 0px !important;">
				<li class="collection-header"><h4>Correlations with <%= combination["exchange_name"] %> Stocks</h4>
				</li>
			</ul>
		</div>
	</div>

	<div id="NIFTY_entities" style="display:none;">
		HELLO
	</div>
	

<% end %>
