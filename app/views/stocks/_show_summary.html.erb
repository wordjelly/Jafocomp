<div class="section">
	<div class="row">
		<div class="col s12 m6 l6">
		  <div class="card">
		    <div class="card-image">
		      <img src="/assets/stocks/default.png">
		    </div>
		    <div class="card-content">
		      <span class="card-title"><%= @stock.stock_name %></span>
		      <p><%= @stock.stock_description %></p>
		    </div>
		    <div class="card-action">
		      <a href="<%= @stock.stock_link %>">Read More At Wikipedia</a>
		      <%= link_to "More Correlations", stock_path(@stock.id.to_s) %>
		    </div>
		  </div>
		</div>
		<div class="col s12 m6 l6">
		  	<ul class="collection with-header">
		  		<li class="collection-header"><h4>Correlations</h4></li>
		  		<% @stock.stock_top_results[0..4].each do |result| %>
		  			<!-- here we can give that facility -->
		  			<% icon = (result["_source"]["rises_or_falls"] == "rises" ? "trending_up" : "trending_down") %>

		  			<% icon_color = (icon == "trending_up" ? "green" : "red") %>

				    <li class="collection-item avatar">
				      <i class="material-icons circle <%= icon_color %>"><%= icon %></i>
				      <span class="title blue-grey-text" style="font-weight: 500"><%= result["_source"]["setup"] %></span>
				      <p><%= result["_source"]["answer"] %>
				      </p>
				      
			    <% end %>
			    </li>
			</ul>
		</div>
	</div>
</div>