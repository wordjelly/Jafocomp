<div class="row">
	<div class="col s12 m12 l12">
	  <div class="card">
	    <div class="card-image">
	      <img style="max-height: 400px" src="/assets/stocks/default.png">
	      
	    </div>
	    <div class="card-content">
	      <span class="card-title"><%= @stock.stock_name %></span>
	      <p>Explore thousands of financial indicators and correlations for <%= @stock.stock_name %></p>
	      <p><%= @stock.stock_description %></p>
	    </div>
	    <div class="card-action">
	      <a href="<%= @stock.stock_link %>">Read More At Wikipedia</a>
	    </div>
	  </div>
	</div>
</div>

<h4>Latest Correlations</h4>
<div class="divider"></div>

<% @stock.stock_top_results.each_slice(2) do |results| %>
	<div class="row">
		<% results.each do |result| %>
		    <%= render :partial => "summary_card", locals: {result: result } %>
		<% end %>
	</div>
<% end %>
	

<!-- order transfer -->

<% @stock.combinations.each do |combination| %>
	<%= puts combination %>
	<div class="section">
		<h3 class="teal-text exchange"><%= combination["exchange_name"] %> & <%= @stock.stock_name %> <i class="material-icons">add_circle_outline</i></h3>

		<div class="divider teal-text"></div>

		<% combination["entities"].each do |entity| %>
			<div id="<%= entity['primary_entity_id'] %>">
				<h4 class="teal-text entity" data-entity="<%= JSON.generate(entity) %>">
					<%= entity["primary_entity_name"] %>
					<i class="material-icons">add_circle_outline</i>
					<div class="entity_combinations" style="display:none;"></div>
				</h4>
			</div>
		<% end %>
	</div>	

<% end %>
