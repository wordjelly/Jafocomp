<div class="row">
	<div class="col s12 m12 l12">
	  <div class="card">
	    <div class="card-image">
	      <img class="entity_background" style="height: 200px">
	    </div>
	    <div class="card-content">
	      <span class="card-title blue-grey-text" style="font-weight: 300; font-size:44px; margin-bottom:1rem;">Correlations between <%= @entity.combine_with %> and <%= @entity.stock_name %> stocks</span>
	      <p style="font-size: 20px;">Check how different stocks from <%= @entity.stock_name %> affect <%= @entity.combine_with %></p>
	    </div>
	    <div class="card-action">
	      <a href="<%= @entity.stock_link %>">Read More At Wikipedia</a>
	    </div>
	  </div>
	</div>
</div>
<!-- so we want all stocks, given an exchange name -->
<!-- we go for stocks index -->
<div class="row">
	<ul class="collection with-header">
        <li class="collection-header"><h4>Choose A Combination</h4></li>
        <% @entity.components.each do |component| %>
        	<%= link_to (component + "vs" + @entity.combine_with), combination_entity_path(@entity.combine_with,component) do %>
        		<li class="collection-item"></li>
        	<% end %>
        <% end %>
    </ul>
</div>